
<style>


    /* cor do texto digitado no mudtext */
    .mud-input > input.mud-input-root {
        color: #fff !important;
    }
    /* cor do label do mudtext */
    .mud-input-control > .mud-input-control-input-container > .mud-input-label-inputcontrol {
        color: #fff !important;
    }

    .mud-dialog .mud-dialog-title {
        padding: 0px;
    }

    

</style>

<link rel="stylesheet" href="/Css/style.css">

<MudGrid Class="paper-style">
    <MudItem xs="9"></MudItem>
    <MudItem xs="3">
        <MudButton Color="Color.Error" OnClick="BtnFechar" Variant="Variant.Filled">
            X
        </MudButton>
    </MudItem>
    <MudItem Class="d-flex justify-center align-center" xs="12">
        <MudText Style="font-weight: 700;font-size:22px; text-transform: uppercase; color:#fff;">Planos</MudText>
    </MudItem>
    <MudItem xs="12">

        <div class="container-main-planos-modal">
            <div class="container-planos-modal">
                <div class="title-planos-modal basico-planos-modal">
                    <p>Básico</p>
                </div>
                <div class="info-planos-modal basico-planos-modal">
                    <p>• Leitor de código de barras</p>
                    <p>• Impressora de etiquetas</p>
                    <p>• Relatórios básicos de gestão</p>
                </div>
            </div>
            <div class="container-planos-modal">
                <div class="title-planos-modal pro-planos-modal">
                    <p>Pro</p>
                </div>
                <div class="info-planos-modal pro-planos-modal">
                    <p>• Emissão de notas fiscais</p>
                    <p>• Planos de inteligência para análise de produtos e empresas mais lucrativos</p>
                    <p>• Alertas de estoque baixo</p>
                    <p>• Troca de mensagens dentro do sistema</p>
                </div>
            </div>
            <div class="container-planos-modal">
                <div class="title-planos-modal premium-planos-modal">
                    <p>Premium</p>
                </div>
                <div class="info-planos-modal premium-planos-modal">
                    <p>• Dashboard Avançado de Análise de Dados</p>
                    <p>• Automação de Processos</p>
                    <p>• Suporte Técnico Prioritário</p>
                    <p>• Relatórios Personalizados e Exportação de Dados</p>
                    <p>• Gestão Financeira Avançada</p>
                    <p>• Integração com e-Commerce</p>
                    <p>• Notificações e Alertas Customizáveis</p>
                    <p>• Controle de Acesso Mobile</p>
                </div>
            </div>
        </div>

    </MudItem>
    
</MudGrid>



@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    private void BtnSalvar()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }
    private void BtnFechar()
    {
        MudDialog!.Close();
    }
}
