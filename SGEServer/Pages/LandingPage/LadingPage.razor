@code {

    private MudForm form;
    private FormModel DadosForm = new FormModel();
    private List<FormModel> DropPlanos = new List<FormModel>();

    private int DescricaoPlano;

    protected override async Task OnInitializedAsync()
    {
        DropPlanos = _Produtos.CarregaPlanos();
        StateHasChanged();
        await base.OnInitializedAsync();
    }

    private async Task SalvarFormulario()
    {
        DadosForm.Descricao = DropPlanos.FirstOrDefault(p => p.Codigo == DescricaoPlano)?.Descricao;
        DadosForm.Email = DadosForm.Email;
        DadosForm.PrimeiroNome = DadosForm.PrimeiroNome;
        DadosForm.Sobrenome = DadosForm.Sobrenome;
        DadosForm.NomeEmpresa = DadosForm.NomeEmpresa;
        DadosForm.CargoEmpresa = DadosForm.CargoEmpresa;
        DadosForm.Celular = DadosForm.Celular;
        DadosForm.DuvidaFeedback = DadosForm.DuvidaFeedback;

        var resp = _Produtos.SalvarForm(DadosForm);

        LimparForm();
        Snackbar.Add("Seus dados foram enviados com Sucesso! Nossa Equipe entrará em contato em breve", Severity.Success);
    }

    private void LimparForm()
    {
        DescricaoPlano = 0;
        DadosForm.Email = string.Empty;
        DadosForm.PrimeiroNome = string.Empty;
        DadosForm.Sobrenome = string.Empty;
        DadosForm.NomeEmpresa = string.Empty;
        DadosForm.CargoEmpresa = string.Empty;
        DadosForm.Celular = string.Empty;
        DadosForm.DuvidaFeedback = string.Empty;
    }


    private void BtnIcones()
    {
        Snackbar.Add("Em implementação", Severity.Info);
    }

    private async Task ScrollToHome()
    {
        await JSRuntime.InvokeVoidAsync("scrollToHome");
    }
    private async Task ScrollToFAQs()
    {
        await JSRuntime.InvokeVoidAsync("scrollToFAQs");
    }
    private async Task ScrollToPlanos()
    {
        await JSRuntime.InvokeVoidAsync("scrollToPlanos");
    }
    private async Task ScrollToContato()
    {
        await JSRuntime.InvokeVoidAsync("scrollToContato");
    }

    private async void BtnPlanos()
    {
        var parameters = new DialogParameters();
        DialogOptions Options = new DialogOptions();
        Options.DisableBackdropClick = true;
        var result = await DialogService.Show<ModalPlanos>("", parameters, Options).Result;

        if (result.Cancelled)
        {

        }
    }
